<Window x:Name="frmCadatroProjeto" x:Class="SistemaGeradorOrcamento.Views.frmCadastroProjeto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaGeradorOrcamento.Views"
        mc:Ignorable="d"
        Title="Cadastro de Projetos" Height="428" Width="560">
    <Grid>
        <GroupBox Header="Orçamentos" HorizontalAlignment="Left" Height="218" Margin="26,157,0,0" VerticalAlignment="Top" Width="499"/>
        <Label Content="Número:" HorizontalAlignment="Left" Margin="26,22,0,0" VerticalAlignment="Top"/>
        <Label Content="Nome do Projeto:" HorizontalAlignment="Left" Margin="26,52,0,0" VerticalAlignment="Top"/>
        <Label Content="Cliente:" HorizontalAlignment="Left" Margin="26,84,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.366,0.236"/>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="248,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.161,0.692"/>
        <TextBox x:Name="txtNumero" HorizontalAlignment="Left" Height="24" Margin="87,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TabIndex="0"/>
        <TextBox x:Name="txtProjeto" HorizontalAlignment="Left" Height="24" Margin="135,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="390" TabIndex="2"/>
        <ComboBox x:Name="cmbStatus" HorizontalAlignment="Left" Margin="298,26,0,0" VerticalAlignment="Top" Width="227" TabIndex="1">
            <ComboBoxItem Content="Emissão Inicial" HorizontalAlignment="Left" Width="225"/>
            <ComboBoxItem Content="Aguardando Aprovação Cliente" HorizontalAlignment="Left" Width="225"/>
            <ComboBoxItem Content="Cancelado" HorizontalAlignment="Left" Width="225"/>
            <ComboBoxItem Content="Fechado" HorizontalAlignment="Left" Width="225"/>
            
        </ComboBox>
        <ComboBox x:Name="cmbCliente" HorizontalAlignment="Left" Margin="87,88,0,0" VerticalAlignment="Top" Width="438" TabIndex="3"/>
        <Button x:Name="btnAdicionarProjeto" Content="Adicionar" HorizontalAlignment="Left" Margin="450,127,0,0" VerticalAlignment="Top" Width="75" Click="BtnAdicionarProjeto_Click" TabIndex="4"/>
        <Button x:Name="btnEditarProjeto" Content="Editar" HorizontalAlignment="Left" Margin="268,127,0,0" VerticalAlignment="Top" Width="75" TabIndex="6"/>
        <DataGrid x:Name="dgListaOrcamento" HorizontalAlignment="Left" Height="146" Margin="42,184,0,0" VerticalAlignment="Top" Width="467" TabIndex="7"/>
        <Button x:Name="btnAdicionarOrcamento" Content="Adicionar" HorizontalAlignment="Left" Margin="434,335,0,0" VerticalAlignment="Top" Width="75" TabIndex="8"/>
        <Button x:Name="btnBuscarOrcamento" Content="Buscar" HorizontalAlignment="Left" Margin="359,127,0,0" VerticalAlignment="Top" Width="75" TabIndex="5"/>

    </Grid>
</Window>
