            <MenuItem Header="Projetos" Height="46" Width="121" HorizontalAlignment="Center" HorizontalContentAlignment="Center" UseLayoutRounding="False" VerticalContentAlignment="Center" VerticalAlignment="Center" Click="MenuItem_Click_Projetos" Background="#FF7676FF" Foreground="#FF040404" FontSize="14" FontWeight="Bold"/>
            <MenuItem Header="Usuários" Height="46" Width="121" HorizontalAlignment="Center" HorizontalContentAlignment="Center" UseLayoutRounding="False" VerticalContentAlignment="Center" VerticalAlignment="Center" Click="MenuItem_Click_Usuarios" Background="#FF7676FF" Foreground="#FF040404" FontSize="14" FontWeight="Bold"/>
        </Menu>

    </Grid>
</Window>
